{
  "name": "apla-responder",
  "version": "0.0.1",
  "description": "Helper module to build Alexa APLA Documents in handlers, in Node.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "https://fx-adr@github.com/fx-adr/apla-responder.git",
  "author": "Adam Rann <adam@fxdigital.uk>",
  "license": "MIT",
  "private": false,
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "html"
    ],
    "collectCoverage": true,
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "scripts": {
    "start:dev": "nodemon",
    "test": "jest --passWithNoTests",
    "build": "tsc"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-jest": "^26.1.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
